{
  "name": "worker-ai-chat",
  "displayName": "Worker AI Chat",
  "description": "Chat with GPT-OSS-120B via Cloudflare Worker",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:worker-ai-chat.chatView"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "worker-ai-chat-sidebar",
          "title": "Worker AI Chat",
          "icon": "$(comment-discussion)"
        }
      ]
    },
    "views": {
      "worker-ai-chat-sidebar": [
        {
          "type": "webview",
          "id": "worker-ai-chat.chatView",
          "name": "Worker AI Chat"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/marked": "^5.0.2",
    "@types/node": "^20.0.0",
    "@types/node-fetch": "^2.6.4",
    "@types/vscode": "^1.80.0",
    "@vscode/test-electron": "^2.3.4",
    "typescript": "^5.2.0"
  },
  "dependencies": {
    "highlight.js": "^11.11.1",
    "marked": "^4.3.0",
    "node-fetch": "^2.6.12"
  }
}
